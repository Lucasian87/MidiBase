<html lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title>HTML5 Responsive Video Player</title>
	<meta name="author" content="Jake Rocheleau">
	
	<link href="~/responsive-html5-video-player-source/style.css" rel="stylesheet" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="HandheldFriendly" content="true">
	<meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
	<script type="text/javascript" src="http://api.html5media.info/1.1.5/html5media.min.js"></script>
	<!--[if lt IE 9]>
	<script type="text/javascript" src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>
<body>
	<hw style="font-size:1vw">Welcome - Please Sign-In or Register</hw>
	<div id="wrapper">


		<video poster="../images/Screenshot (78).png" width="1280" height="960" controls loop autoplay>
			<source src="~/video/2018-05-18-00-35-59-7FNDH.mp4" type="video/mp4" />
		</video>
	</div>

	<script type="text/javascript">
		$(document).ready(function () {
			$("video").on("click", function () {
				if (this.paused == true) {
					this.play();
				} else {
					this.pause();
				}
			}); // end video click handler

			$("html").on("keydown", function (e) {
				var kcode = (e.keyCode ? e.keyCode : e.which);
				var viddy = $("video")[0];

				if (kcode == 32) {
					// if space bar stop default scrolling and start/stop video player
					e.preventDefault();

					if (viddy.paused == true) {
						viddy.play();
					} else {
						viddy.pause();
					}
				} // end if keycode logic
			}); // end keydown event handler
		});
	</script>
</body>
</html>

